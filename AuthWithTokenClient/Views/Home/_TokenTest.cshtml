@model AuthWithTokenClient.Models.Home.Test.HeadersViewModel

@{
    Layout = null;
}

<div class="row card-row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                GET Token Test Details
            </div>
            <div class="card-body">
                <div class="row get-token-test-details-result-row">
                    <div class="col-md-12">
                        <h5 class="underline-text">Response to Test GET:</h5>
                        <div id="getTokenTestResult"></div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        @using (Html.BeginForm("GetTokenTest", "Home", FormMethod.Post, new { id = "getTokenTest-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.HiddenFor(m => m.SecureToken, new { id = "hiddenSecretToken" })
                            </div>
                            <div class="d-flex justify-content-center">
                                <input type="submit" class="btn btn-primary home-btn-custom-style" value="GET Token" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>